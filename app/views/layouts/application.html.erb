<!DOCTYPE html>
<html>
<head>
  <title>Ratebeer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navibar">
    <%= link_to 'breweries', breweries_path %>
    <%= link_to 'beers', beers_path %>
    <%= link_to 'ratings', ratings_path %>
    <%= link_to 'users', users_path %>
    <%= link_to 'clubs', beer_clubs_path %>
    <%= link_to 'palces', places_path %>
    <%= ' | ' %>
    <% if current_user %>
        <%= link_to 'RateABeer!', new_rating_url %>
        <%= link_to 'JoinAClub!', new_membership_url %>
        <%= ' | ' %>
        <%= link_to current_user.username, current_user %>
        <%= link_to 'signout', signout_path, method: :delete%>
  <% else %>
        <%= link_to 'signin', signin_path %>
        <%= link_to 'signup', new_user_url %>
  <% end %>


  </div>

  <%= yield %>

</body>
</html>
