<p id="notice"><%= notice %></p>


<table class="table">
  <thead>
    <tr>
      <th><h2><%= @style.name %></h2></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <th><quote><%= @style.description %></quote></th>
    </tr>
  </tbody>

</table>






<table class="table">
  <thead>
    <tr>
      <th><h4>Beers</h4></th>
      <th><h4>Average</h4></th>
    </tr>
  </thead>

  <% @style.beers.each do |beer| %>
    <tbody>
      <th><%= link_to beer.name, beer %></th>
      <th><%=beer.average_rating%></th>
    </tbody>
  <% end %>

</table>

